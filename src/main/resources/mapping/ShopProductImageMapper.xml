<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cqcet.dao.ShopProductImageMapper">
    <resultMap id="BaseResultMap" type="com.cqcet.entity.ShopProductImage">
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="pid" jdbcType="INTEGER" property="pid"/>
        <result column="value1" jdbcType="VARCHAR" property="value1"/>
        <result column="value2" jdbcType="VARCHAR" property="value2"/>
        <result column="value3" jdbcType="VARCHAR" property="value3"/>
        <result column="value4" jdbcType="VARCHAR" property="value4"/>
    </resultMap>


    <select id="listByproductImageId" resultMap="BaseResultMap">
        SELECT
        *
        FROM
        shop_productimage
        WHERE
            pid=#{pid}
    </select>
    <!--更新商品-->
    <update id="update">
        UPDATE shop_productimage
        <set>
            <if test="value1!=null and value1!=''">value1=#{value1},</if>
            <if test="value2!=null and value2!='' ">value2=#{value2},</if>
            <if test="value3!=null and value3!=''">value3=#{value3},</if>
            <if test="value4!=null and value4!=''">value4=#{value4},</if>
        </set>
        WHERE pid = #{pid}
    </update>

</mapper>